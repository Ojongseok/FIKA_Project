<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mycourse_child_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/textView40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2022. 08. 16"
        android:textColor="#9D9D9D"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_home_scrapcourse_iv"
        android:layout_width="124dp"
        android:layout_height="90dp"
        android:layout_marginTop="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/sample_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView40" />

    <TextView
        android:id="@+id/item_home_coursescrap_drama_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:text="이태원 클라쓰"
        android:textColor="@color/login_text"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/item_home_scrapcourse_iv"
        app:layout_constraintTop_toTopOf="@+id/item_home_scrapcourse_iv" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        android:textColor="@color/login_text"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toStartOf="@id/item_drama_coursescrap_where_tv"
        app:layout_constraintStart_toEndOf="@id/item_home_coursescrap_drama_title_tv"
        app:layout_constraintTop_toTopOf="@id/item_home_coursescrap_drama_title_tv" />

    <TextView
        android:id="@+id/item_drama_coursescrap_where_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text="서울"
        android:textColor="@color/login_text"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@id/item_home_coursescrap_drama_title_tv"
        app:layout_constraintTop_toTopOf="@id/item_home_coursescrap_drama_title_tv" />

    <ImageView
        android:id="@+id/list_child_toggle_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/child_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/dot" />

    <TextView
        android:id="@+id/child_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="우리의 밤은 당신의 낮보다 아름답다"
        android:textColor="@color/login_text"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/item_home_coursescrap_drama_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/item_home_coursescrap_drama_title_tv" />

    <TextView
        android:id="@+id/item_home_coursescrap_info_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="가나다라마바사아자차카타파하"
        android:textColor="@color/login_text"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_home_coursescrap_number_tv"
        app:layout_constraintStart_toStartOf="@id/item_home_coursescrap_drama_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/child_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        android:textColor="@color/login_text"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toStartOf="@id/item_home_coursescrap_number_tv"
        app:layout_constraintStart_toEndOf="@id/item_home_coursescrap_info_tv"
        app:layout_constraintTop_toTopOf="@id/item_home_coursescrap_info_tv" />

    <TextView
        android:id="@+id/item_home_coursescrap_number_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="총 110곳"
        android:textColor="@color/login_text"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_home_coursescrap_info_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>
