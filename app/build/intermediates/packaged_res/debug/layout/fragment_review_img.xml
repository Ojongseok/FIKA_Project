<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_review_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#46000000">

    <androidx.cardview.widget.CardView
        android:id="@+id/dialog_review_cv"
        android:layout_width="280dp"
        android:layout_height="280dp"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/dialog_review_iv"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:scaleType="fitXY"
            android:src="@drawable/sample_image" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/dialog_review_close_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/remove_property"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@id/dialog_review_cv"
        app:layout_constraintEnd_toEndOf="@id/dialog_review_cv"/>

</androidx.constraintlayout.widget.ConstraintLayout>