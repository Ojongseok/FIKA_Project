<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <TextView
        android:id="@+id/agree_02_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="20dp"
        android:text="@string/agree_02_title_tv"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/agree_02_j_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="* 日本語"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/agree_02_title_tv"
        app:layout_constraintStart_toStartOf="@id/agree_02_title_tv"/>

    <ScrollView
        android:id="@+id/agree_02_j_contets_sv"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/agree_02_j_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/edittext_background"
        >

        <TextView
            android:id="@+id/agree_02_j_contets_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/service_agree_j"
            android:textSize="14sp"/>

    </ScrollView>

    <TextView
        android:id="@+id/agree_02_k_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="* 한국어"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/agree_02_j_contets_sv"
        app:layout_constraintStart_toStartOf="@id/agree_02_j_contets_sv"/>

    <ScrollView
        android:id="@+id/agree_02_k_contets_sv"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/agree_02_k_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/edittext_background"
        >

        <TextView
            android:id="@+id/agree_02_k_contets_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/service_agree_k"
            android:textSize="14sp"/>

    </ScrollView>

    <TextView
        android:id="@+id/agree_02_countinue_btn"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:textStyle="bold"
        android:text="@string/확인"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/blue_btn"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>