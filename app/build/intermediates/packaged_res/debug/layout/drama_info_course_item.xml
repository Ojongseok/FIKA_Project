<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drama_info_course_item_layout"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/home_scraprank_background">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="124dp"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/drama_info_course_image"
            android:layout_width="124dp"
            android:layout_height="match_parent"
            android:background="@drawable/home_scraprank_background"
            android:scaleType="fitXY"
            android:src="@drawable/sample_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/drama_info_course_item_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="98dp"
            android:layout_marginTop="6dp"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_star_off" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/item_home_coursescrap_drama_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:text="이태원 클라쓰"
        android:textColor="@color/login_text"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        android:textColor="@color/login_text"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toStartOf="@id/item_drama_coursescrap_where_tv"
        app:layout_constraintStart_toEndOf="@id/item_home_coursescrap_drama_title_tv"
        app:layout_constraintTop_toTopOf="@id/item_home_coursescrap_drama_title_tv" />

    <TextView
        android:id="@+id/item_drama_coursescrap_where_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text="서울"
        android:textColor="@color/login_text"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@id/item_home_coursescrap_drama_title_tv"
        app:layout_constraintTop_toTopOf="@id/item_home_coursescrap_drama_title_tv" />

    <TextView
        android:id="@+id/child_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="우리의 밤은 당신의 낮보다 아름답다"
        android:textColor="@color/login_text"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/item_home_coursescrap_drama_title_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_drama_coursescrap_info_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="가나다라마바사아자차카타파하"
        android:textColor="@color/login_text"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_home_coursescrap_number_tv"
        app:layout_constraintStart_toStartOf="@id/item_home_coursescrap_drama_title_tv" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="|"
        android:textColor="@color/login_text"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toStartOf="@+id/item_drama_coursescrap_number_tv"
        app:layout_constraintTop_toTopOf="@+id/item_drama_coursescrap_info_tv" />

    <TextView
        android:id="@+id/item_drama_coursescrap_number_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="총 110곳"
        android:textColor="@color/login_text"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_drama_coursescrap_info_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>
