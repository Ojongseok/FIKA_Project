<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ImageView
        android:id="@+id/signup_02_back_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="20dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/back_btn"/>

    <TextView
        android:id="@+id/signup_02_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="회원가입"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/signup_02_nickname_iv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_mypage"
        android:layout_marginTop="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signup_02_title_tv"
        />

    <EditText
        android:id="@+id/signup_02_nickname_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="40dp"
        android:hint="닉네임"
        android:textSize="14sp"
        android:textColorHint="#D9D9D9"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/signup_02_nickname_iv"
        app:layout_constraintTop_toTopOf="@id/signup_02_nickname_iv"
        app:layout_constraintBottom_toBottomOf="@id/signup_02_nickname_iv"
        />

    <View
        android:id="@+id/signup_02_nickname_et_underscore_view"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/signup_02_nickname_et"
        app:layout_constraintStart_toStartOf="@id/signup_02_nickname_et"
        app:layout_constraintEnd_toEndOf="@id/signup_02_nickname_et"
        android:background="@color/grey3"/>


    <TextView
        android:id="@+id/signup_02_nickname_warning_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용불가능한 닉네임입니다"
        android:textColor="@color/grey3"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/signup_02_nickname_et"
        app:layout_constraintTop_toBottomOf="@+id/signup_02_nickname_et_underscore_view"/>


    <ImageView
        android:id="@+id/signup_02_email_iv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/email"
        android:layout_marginTop="16dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signup_02_nickname_warning_tv"
        />

    <EditText
        android:id="@+id/signup_02_email_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="40dp"
        android:hint="닉네임"
        android:textSize="14sp"
        android:textColorHint="#D9D9D9"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/signup_02_email_iv"
        app:layout_constraintTop_toTopOf="@id/signup_02_email_iv"
        app:layout_constraintBottom_toBottomOf="@id/signup_02_email_iv"
        />

    <View
        android:id="@+id/signup_02_email_et_underscore_view"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/signup_02_email_et"
        app:layout_constraintStart_toStartOf="@id/signup_02_email_et"
        app:layout_constraintEnd_toEndOf="@id/signup_02_email_et"
        android:background="@color/grey3"/>


    <TextView
        android:id="@+id/signup_02_email_warning_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일 형식이 바르지 않습니다"
        android:textColor="@color/grey3"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/signup_02_email_et"
        app:layout_constraintTop_toBottomOf="@+id/signup_02_email_et_underscore_view"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="85dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/signup_02_finish_btn">

        <TextView
            android:id="@+id/login_sign_up_question_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가입한 적이 있나요?"
            android:textColor="@color/login_text"
            android:textSize="16sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verti_bar"
            android:textColor="@color/login_text"
            android:textSize="16sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/login_login_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOG IN"
            android:textColor="@color/login_text"
            android:textSize="16sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/signup_02_finish_btn"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:textStyle="bold"
        android:text="SIGN UP"
        android:textSize="16sp"
        android:background="#F3F3F3"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>