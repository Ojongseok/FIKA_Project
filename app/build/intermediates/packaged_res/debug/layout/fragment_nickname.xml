<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ImageView
        android:id="@+id/nickname_back_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="20dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/back_btn"/>

    <TextView
        android:id="@+id/nickname_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="FIKA에서 사용할 닉네임을 \n입력해주세요."
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/nickname_back_btn"
        app:layout_constraintStart_toStartOf="@id/nickname_back_btn"/>

    <TextView
        android:id="@+id/nickname_sub_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임은 공백없이 2~10자로 입력해주세요."
        android:textColor="@color/grey3"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/nickname_title_tv"
        app:layout_constraintTop_toBottomOf="@id/nickname_title_tv"/>

    <LinearLayout
        android:id="@+id/nickname_et_background"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        android:background="#D3E1E1E1"
        app:layout_constraintStart_toStartOf="@id/nickname_title_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nickname_sub_title_tv">


        <EditText
            android:id="@+id/nickname_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_gravity="center"
            android:hint="닉네임을 입력해주세요."
            android:singleLine="true"
            android:lines="1"
            android:textSize="16sp"
            android:textColorHint="@color/grey2"
            android:background="@null"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/nickname_warning_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용불가능한 닉네임입니다"
        android:textColor="@color/grey3"
        android:textSize="12sp"
        android:visibility="gone"
        android:layout_marginTop="4dp"
        android:layout_marginStart="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nickname_et_background"/>

    <TextView
        android:id="@+id/nickname_done_tv"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:text="이제 FIKA와 함께 여행 준비하기"
        android:textColor="@color/grey2"
        android:background="@color/grey3"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>