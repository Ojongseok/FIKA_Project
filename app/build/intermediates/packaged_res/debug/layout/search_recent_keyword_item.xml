<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    android:background="@drawable/mycourse_edit_btn_shape"
    android:paddingLeft="16dp"
    android:paddingTop="8dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/search_recent_keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text"/>

    <ImageView
        android:id="@+id/search_recent_remove_button"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignTop="@id/search_recent_keyword"
        android:layout_alignBottom="@id/search_recent_keyword"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@id/search_recent_keyword"
        android:background="@drawable/tour_searchbar_remove" />
</RelativeLayout>