<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="267dp"
    android:layout_width="330dp"
    android:background="@drawable/quitdialog_background">

    <TextView
        android:id="@+id/dialog_quit_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_quit_title_tv"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/dialog_quit_contents_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textSize="16sp"
        android:textColor="@color/black2"
        android:text="@string/dialog_quit_contents_tv"
        android:lineSpacingExtra="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_quit_title_tv"/>

    <TextView
        android:id="@+id/dialog_quit_back_btn"
        android:layout_width="164.7dp"
        android:layout_height="63dp"
        android:textSize="16sp"
        android:text="@string/dialog_quit_back_btn"
        android:gravity="center"
        android:background="@drawable/quitdialog_bottom_left_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/dialog_quit_quit_btn"
        android:layout_width="164.7dp"
        android:layout_height="63dp"
        android:textSize="16sp"
        android:text="@string/dialog_quit_quit_btn"
        android:textColor="@color/main_blue"
        android:gravity="center"
        android:background="@drawable/quitdialog_bottom_right_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
