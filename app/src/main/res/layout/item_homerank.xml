<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/item_rank_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="186dp"
    android:layout_height="163dp"
    android:layout_margin="1dp"
    android:background="@drawable/home_rank_background">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_rank_cover_img_cv"
        android:layout_width="160dp"
        android:layout_height="90dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="1dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/item_rank_layout"
        app:layout_constraintEnd_toEndOf="@id/item_rank_layout">

        <ImageView
            android:id="@+id/item_rank_cover_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher_foreground" />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/item_rank_flag_iv"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="@id/item_rank_cover_img_cv"
        app:layout_constraintEnd_toEndOf="@id/item_rank_cover_img_cv"
        />

    <TextView
        android:id="@+id/item_rank_drama_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="이태원클라쓰"
        android:textSize="12dp"
        android:textColor="@color/login_hint"
        app:layout_constraintStart_toStartOf="@+id/item_rank_cover_img_cv"
        app:layout_constraintTop_toBottomOf="@+id/item_rank_cover_img_cv"
        />

    <TextView
        android:id="@+id/item_rank_article_title_tv"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="1화. 새로이가 수아와 첫 데이트"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="14dp"
        android:textColor="@color/login_text"
        app:layout_constraintStart_toStartOf="@+id/item_rank_cover_img_cv"
        app:layout_constraintTop_toBottomOf="@+id/item_rank_drama_title_tv"
        />
</androidx.constraintlayout.widget.ConstraintLayout>