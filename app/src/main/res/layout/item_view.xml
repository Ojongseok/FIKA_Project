<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/map_top_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/map_iv"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/sample_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/map_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_flag_off" />

    <TextView
        android:id="@+id/large_map_locage_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/locage_tv_background"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/locage"
        android:textColor="@color/main_blue"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/map_iv"
        app:layout_constraintTop_toTopOf="@+id/map_iv" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="9dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/map_iv"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/map_where_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서울" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="ㅣ" />

            <TextView
                android:id="@+id/map_where_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공원" />
        </LinearLayout>

        <TextView
            android:id="@+id/map_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="투명 카약"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>