<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/login_look_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="둘러보기"
        android:textColor="@color/login_text"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/login_logo_iv"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginTop="56dp"
        android:src="@drawable/sample_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/img_app_logo"/>

    <EditText
        android:id="@+id/login_email_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:background="@null"
        android:hint="@string/login_email_hint"
        android:textColorHint="@color/login_text"
        android:textColor="@color/login_text"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_logo_iv" />

    <View
        android:id="@+id/login_email_underscore_view"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="8dp"
        android:background="@color/login_text"
        app:layout_constraintEnd_toEndOf="@+id/login_email_et"
        app:layout_constraintStart_toStartOf="@+id/login_email_et"
        app:layout_constraintTop_toBottomOf="@+id/login_email_et" />

    <TextView
        android:id="@+id/login_email_warning_tv"
        android:layout_width="304dp"
        android:layout_height="18dp"
        android:text="이메일 주소를 입력해 주세요"
        android:textColor="@color/login_hint"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_email_underscore_view"/>

    <EditText
        android:id="@+id/login_ps_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:background="@null"
        android:hint="@string/login_ps_hint"
        android:textColorHint="@color/login_text"
        android:textColor="@color/login_text"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_email_warning_tv"
        android:autofillHints="@null"/>

    <View
        android:id="@+id/login_ps_underscore_view"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="8dp"
        android:background="@color/login_text"
        app:layout_constraintEnd_toEndOf="@+id/login_ps_et"
        app:layout_constraintStart_toStartOf="@+id/login_ps_et"
        app:layout_constraintTop_toBottomOf="@+id/login_ps_et" />

    <TextView
        android:id="@+id/login_ps_warning_tv"
        android:layout_width="304dp"
        android:layout_height="18dp"
        android:text="비밀번호를 입력해 주세요"
        android:textColor="@color/login_hint"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_ps_underscore_view"/>

    <TextView
        android:id="@+id/login_find_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디 찾기"
        android:textColor="@color/login_text"
        android:textSize="12sp"
        android:layout_marginTop="372dp"
        android:layout_marginEnd="58dp"
        app:layout_constraintEnd_toStartOf="@id/login_find_ps_tv"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/login_find_ps_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 찾기"
        android:textColor="@color/login_text"
        android:textSize="12sp"
        android:layout_marginTop="372dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/login_sign_up_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textColor="@color/login_text"
        android:textSize="12sp"
        android:layout_marginTop="372dp"
        android:layout_marginStart="58dp"
        app:layout_constraintStart_toEndOf="@id/login_find_ps_tv"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_kakao_btn"
        android:layout_width="317dp"
        android:layout_height="48dp"
        android:layout_marginBottom="104dp"
        android:background="@drawable/login_btn"
        android:text="카카오로 시작하기"
        android:textColor="@color/login_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_yahoo_btn"
        android:layout_width="317dp"
        android:layout_height="48dp"
        android:text="야후재팬으로 시작하기"
        android:textColor="@color/login_text"
        android:layout_marginTop="16dp"
        android:background="@drawable/login_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_kakao_btn"
        />


    <ProgressBar
        android:id="@+id/login_loading_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:indeterminateTint="@color/main_blue"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>