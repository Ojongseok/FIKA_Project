<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="110dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="1dp"
    android:background="@drawable/home_rank_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_home_course_top_cv"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center"
            android:background="@color/login_hint"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/item_home_course_cv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="100dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <ImageView
                    android:id="@+id/item_home_course_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_launcher_background"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/item_home_course_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="박새로이 코스"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textColor="@color/login_text"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/item_home_course_cv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/item_home_course_drama_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이태원클라쓰"
                android:textStyle="normal"
                android:textSize="12dp"
                android:textColor="@color/login_text"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/item_home_course_bottom_cv"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_home_course_top_cv">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/item_home_course_flag_iv"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="6dp"/>

        <TextView
            android:id="@+id/item_home_course_flag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="일산 호수공원"
            android:textSize="12dp"
            android:textColor="@color/login_text"
            app:layout_constraintTop_toTopOf="@id/item_home_course_flag_iv"
            app:layout_constraintBottom_toBottomOf="@id/item_home_course_flag_iv"
            app:layout_constraintStart_toEndOf="@id/item_home_course_flag_iv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
