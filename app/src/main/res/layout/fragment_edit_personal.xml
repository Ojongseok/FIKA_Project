<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:clickable="true">

    <ImageView
        android:id="@+id/edit_personal_back_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="20dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/back_btn"/>

    <TextView
        android:id="@+id/edit_personal_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="개인정보 변경"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/edit_personal_nickname_iv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_mypage"
        android:layout_marginTop="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_personal_title_tv"
        />

    <ImageView
        android:id="@+id/edit_personal_nickname_edit_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/edit_btn"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_personal_title_tv"
        />

    <EditText
        android:id="@+id/edit_personal_nickname_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="닉네임"
        android:textSize="14sp"
        android:textColorHint="#D9D9D9"
        android:background="@null"
        app:layout_constraintEnd_toStartOf="@id/edit_personal_nickname_edit_btn"
        app:layout_constraintStart_toEndOf="@id/edit_personal_nickname_iv"
        app:layout_constraintTop_toTopOf="@id/edit_personal_nickname_iv"
        app:layout_constraintBottom_toBottomOf="@id/edit_personal_nickname_iv"
        />

    <View
        android:id="@+id/edit_personal_nickname_et_underscore_view"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/edit_personal_nickname_et"
        app:layout_constraintStart_toStartOf="@id/edit_personal_nickname_et"
        app:layout_constraintEnd_toEndOf="@id/edit_personal_nickname_et"
        android:background="@color/grey"/>


    <TextView
        android:id="@+id/edit_personal_nickname_warning_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용불가능한 닉네임입니다"
        android:textColor="@color/grey3"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/edit_personal_nickname_et"
        app:layout_constraintTop_toBottomOf="@+id/edit_personal_nickname_et_underscore_view"/>


    <ImageView
        android:id="@+id/edit_personal_email_iv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/email"
        android:layout_marginTop="16dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_personal_nickname_warning_tv"
        />


    <ImageView
        android:id="@+id/edit_personal_email_edit_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/edit_btn"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@id/edit_personal_nickname_edit_btn"
        app:layout_constraintBottom_toBottomOf="@id/edit_personal_email_iv"
        />

    <EditText
        android:id="@+id/edit_personal_email_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="닉네임"
        android:textSize="14sp"
        android:textColorHint="#D9D9D9"
        android:background="@null"
        app:layout_constraintEnd_toStartOf="@id/edit_personal_email_edit_btn"
        app:layout_constraintStart_toEndOf="@id/edit_personal_email_iv"
        app:layout_constraintTop_toTopOf="@id/edit_personal_email_iv"
        app:layout_constraintBottom_toBottomOf="@id/edit_personal_email_iv"
        />

    <View
        android:id="@+id/edit_personal_email_et_underscore_view"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/edit_personal_email_et"
        app:layout_constraintStart_toStartOf="@id/edit_personal_email_et"
        app:layout_constraintEnd_toEndOf="@id/edit_personal_email_et"
        android:background="@color/grey"/>


    <TextView
        android:id="@+id/edit_personal_email_warning_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일 형식이 바르지 않습니다"
        android:textColor="@color/grey3"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/edit_personal_email_et"
        app:layout_constraintTop_toBottomOf="@+id/edit_personal_email_et_underscore_view"/>


    <TextView
        android:id="@+id/edit_personal_quit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FIKA 탈퇴하기"
        android:textColor="@color/login_text"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>