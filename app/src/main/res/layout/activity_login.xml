<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/login_frm"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/login_logo_iv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="20dp"
        android:src="@drawable/sample_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/img_app_logo"/>

    <ImageView
        android:id="@+id/login_logo_big_iv"
        android:layout_width="0dp"
        android:layout_height="260dp"
        android:layout_marginTop="88dp"
        android:layout_marginStart="96dp"
        android:layout_marginEnd="96dp"
        android:scaleType="fitXY"
        android:src="@drawable/sample_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/img_app_logo"/>

    <TextView
        android:id="@+id/login_easy_login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="간편로그인"
        android:textStyle="bold"
        android:textColor="@color/login_text"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_logo_big_iv"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="66dp"
        android:layout_marginEnd="66dp"
        app:layout_constraintTop_toBottomOf="@id/login_easy_login_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/login_google_iv"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@drawable/profile_sample_img"/>


            <TextView
                android:id="@+id/login_google_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구글"
                android:layout_marginTop="8dp"
                android:textColor="@color/login_text"
                android:textSize="12sp"/>
        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/login_yahoo_iv"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@drawable/profile_sample_img"/>


            <TextView
                android:id="@+id/login_yahoo_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="야후재팬"
                android:layout_marginTop="8dp"
                android:textColor="@color/login_text"
                android:textSize="12sp"/>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/login_line_iv"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@drawable/profile_sample_img"/>


            <TextView
                android:id="@+id/login_line_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="라인"
                android:layout_marginTop="8dp"
                android:textColor="@color/login_text"
                android:textSize="12sp"/>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/login_kakao_iv"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@drawable/profile_sample_img"/>


            <TextView
                android:id="@+id/login_kakao_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구글"
                android:layout_marginTop="8dp"
                android:textColor="@color/login_text"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="88dp"
        android:layout_marginEnd="88dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/login_sign_up_question_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FIKA가 처음이신가요?"
            android:textColor="@color/login_text"
            android:textSize="16sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verti_bar"
            android:textColor="@color/login_text"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/login_sign_up_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:textColor="@color/login_text"
            android:textSize="16sp"/>

    </LinearLayout>


    <ProgressBar
        android:id="@+id/login_loading_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:indeterminateTint="@color/main_blue"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>