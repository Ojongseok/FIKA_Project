<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ImageView
        android:id="@+id/quit_back_btn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="20dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/back_btn"/>

    <TextView
        android:id="@+id/quit_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FIKA 탈퇴"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/quit_back_btn"
        app:layout_constraintBottom_toBottomOf="@id/quit_back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/quit_sub_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="유의 사항"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/quit_back_btn"
        app:layout_constraintStart_toStartOf="@id/quit_back_btn"
        />

    <LinearLayout
        android:id="@+id/quit_contents_layout"
        android:background="@drawable/edittext_background"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        android:padding="20dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/quit_sub_title_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quit_sub_title_tv">

        <TextView
            android:id="@+id/quit_contents_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FIKA 탈퇴 시, 가입 이력, 닉네임, 만든 코스가 사라지며 복구가 불가능합니다."
            android:textColor="@color/login_text"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/quit_back_btn"
            app:layout_constraintStart_toStartOf="@id/quit_back_btn"
            />

        <TextView
            android:id="@+id/quit_contents_tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="FIKA 탈퇴 후에도 작성한 리뷰는 삭제되지 않으며 unknown의 게시물로 유지됩니다."
            android:textColor="@color/login_text"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/quit_back_btn"
            app:layout_constraintStart_toStartOf="@id/quit_back_btn"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/quit_contents_warning_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@id/quit_contents_layout"
        app:layout_constraintEnd_toEndOf="@id/quit_contents_layout"
        app:layout_constraintTop_toBottomOf="@id/quit_contents_layout">

        <CheckBox
            android:layout_width="24dp"
            android:layout_height="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유의사항을 숙지했으며, 탈퇴를 진행합니다."
            android:textColor="@color/login_text"
            android:textSize="14sp"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@id/quit_back_btn"
            app:layout_constraintStart_toStartOf="@id/quit_back_btn"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/quit_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/quit_btn"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@id/quit_contents_warning_layout"
        app:layout_constraintEnd_toEndOf="@id/quit_contents_warning_layout"
        app:layout_constraintTop_toBottomOf="@id/quit_contents_warning_layout"/>


</androidx.constraintlayout.widget.ConstraintLayout>