<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/home_logo_iv"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_margin="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/home_search_et"
            android:layout_width="220dp"
            android:layout_height="36dp"
            android:background="@drawable/login_btn"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@id/home_logo_iv"
            app:layout_constraintTop_toTopOf="@id/home_logo_iv"
            app:layout_constraintBottom_toBottomOf="@id/home_logo_iv"
            />

        <ImageView
            android:id="@+id/home_alarm_iv"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/home_logo_iv"
            app:layout_constraintBottom_toBottomOf="@id/home_logo_iv"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/home_banner_vp"
            android:layout_width="0dp"
            android:layout_height="138dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_search_et" />

        <TextView
            android:id="@+id/home_course_making_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FIKA"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/login_text"
            android:layout_marginTop="32dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/home_banner_vp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/home_course_making_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="님만의 코스 만들기"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/login_text"
            android:layout_marginTop="32dp"
            android:layout_marginStart="2dp"
            app:layout_constraintTop_toBottomOf="@id/home_banner_vp"
            app:layout_constraintStart_toEndOf="@+id/home_course_making_tv"/>

        <com.github.rubensousa.gravitysnaphelper.GravitySnapRecyclerView
            android:id="@+id/home_course_making_rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            tools:listitem="@layout/item_homecourse"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/home_course_making_name_tv"
            app:layout_constraintStart_toStartOf="@id/home_banner_vp"
            app:layout_constraintEnd_toEndOf="@id/home_banner_vp"
            app:snapGravity="center"/>

        <TextView
            android:id="@+id/home_rank_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사람들이 많이 방문한 명장면 TOP5"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/login_text"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/home_course_making_rv"
            app:layout_constraintStart_toStartOf="@+id/home_banner_vp"/>

        <com.github.rubensousa.gravitysnaphelper.GravitySnapRecyclerView
            android:id="@+id/home_rank_rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            tools:listitem="@layout/item_homerank"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/home_rank_tv"
            app:layout_constraintStart_toStartOf="@id/home_banner_vp"
            app:layout_constraintEnd_toEndOf="@id/home_banner_vp"
            app:snapGravity="center"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>