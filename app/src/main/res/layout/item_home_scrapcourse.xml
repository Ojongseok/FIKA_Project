<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginTop="5dp"
    android:id="@+id/item_layout"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_home_scrapcourse_cv"
        android:layout_width="124dp"
        android:layout_height="90dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/item_home_scrapcourse_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/grey3"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/item_home_coursescrap_drama_star_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_star_off"
        android:elevation="12dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintTop_toTopOf="@id/item_home_scrapcourse_cv"
        app:layout_constraintEnd_toEndOf="@id/item_home_scrapcourse_cv"
        />

    <TextView
        android:id="@+id/item_home_coursescrap_drama_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이태원 클라쓰"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="@color/black2"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/item_home_scrapcourse_cv"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textView51"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="|"
        android:textColor="@color/black2"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@id/item_home_coursescrap_drama_title_tv"
        app:layout_constraintTop_toTopOf="@id/item_home_coursescrap_drama_title_tv" />

    <TextView
        android:id="@+id/item_home_coursescrap_where_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="서울"
        android:textColor="@color/black2"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/textView51"
        app:layout_constraintTop_toTopOf="@id/item_home_coursescrap_drama_title_tv" />

    <TextView
        android:id="@+id/child_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="우리의 밤은 당신의 낮보다 아름답다"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="2dp"
        android:textColor="@color/black2"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/item_home_coursescrap_drama_title_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/item_home_coursescrap_info_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sample_review"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="@color/grey"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="@id/item_home_coursescrap_drama_title_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
