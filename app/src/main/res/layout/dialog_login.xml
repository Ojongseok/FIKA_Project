<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/logindialog_background"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="44dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/login_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_dialog_title"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/login_dialog_tv_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black2"
            android:text="@string/login_dialog_tv_01"
            android:layout_marginTop="32dp"
            android:gravity="start"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/login_dialog_tv_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black2"
            android:text="@string/login_dialog_tv_02"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="3dp"
            android:gravity="start"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/login_dialog_tv_03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black2"
            android:text="@string/login_dialog_tv_03"
            android:layout_marginTop="68dp"
            android:lineSpacingExtra="3dp"
            android:gravity="start"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/login_dialog_email"
            android:layout_width="180dp"
            android:layout_height="56dp"
            android:layout_margin="24dp"
            android:gravity="center"
            android:text="@string/login_dialog_email"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black2"
            android:background="@drawable/blue_btn_background"
            android:src="@drawable/login_dialog_btn"/>
    </LinearLayout>