<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/item_home_dramarank_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">

    <ImageView
        android:id="@+id/item_drama_rank_img_iv"
        android:layout_width="88dp"
        android:layout_height="126dp"
        android:scaleType="fitXY"
        android:src="@drawable/sample_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_drama_rank_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="드라마명"
        android:textSize="14sp"
        android:textColor="@color/login_hint"
        app:layout_constraintEnd_toEndOf="@id/item_drama_rank_img_iv"
        app:layout_constraintStart_toStartOf="@+id/item_drama_rank_img_iv"
        app:layout_constraintTop_toBottomOf="@+id/item_drama_rank_img_iv"
        />

</androidx.constraintlayout.widget.ConstraintLayout>