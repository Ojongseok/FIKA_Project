<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/dramalist_dramaimage_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp">

    <ImageView
        android:id="@+id/dramalist_dramaimage"
        android:layout_width="112dp"
        android:layout_height="160dp"
        android:scaleType="fitXY"
        app:srcCompat="@color/grey4" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/dramalist_dramaname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dramalist_dramaimage_cv"
        android:layout_alignLeft="@id/dramalist_dramaimage_cv"
        android:layout_alignRight="@id/dramalist_dramaimage_cv"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/black2"
        android:text="드라마명" />

</RelativeLayout>