<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC9D9D9D"
    tools:context=".ui.main.tour.ActorSelectFragment" >

    <RelativeLayout
        android:id="@+id/actor_select_back_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_margin="33dp"
            android:background="@drawable/tour_actor_select_circle"
            android:gravity="center"
            android:text="이태원클라쓰" />

        <TextView
            android:id="@+id/actor_select_item1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_above="@id/textView"
            android:layout_centerHorizontal="true"
            android:background="@drawable/tour_actor_select_circle"
            android:gravity="center"
            android:text="박새로이" />

        <TextView
            android:id="@+id/actor_select_item4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/textView"
            android:background="@drawable/tour_actor_select_circle"
            android:gravity="center"
            android:text="오수아" />

        <TextView
            android:id="@+id/actor_select_item2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/textView"
            android:background="@drawable/tour_actor_select_circle"
            android:gravity="center"
            android:text="조이서" />

        <TextView
            android:id="@+id/actor_select_item3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/textView"
            android:layout_centerHorizontal="true"
            android:background="@drawable/tour_actor_select_circle"
            android:gravity="center"
            android:text="장가" />
    </RelativeLayout>

</FrameLayout>