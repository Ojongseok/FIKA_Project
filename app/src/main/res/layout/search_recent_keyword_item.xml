<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="85dp"
    android:layout_height="32dp"
    android:layout_marginRight="10dp"
    android:background="#C7E1F6"
    android:gravity="center_horizontal|center_vertical">

    <TextView
        android:id="@+id/search_recent_keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="TextView"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/search_recent_remove_button"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignTop="@id/search_recent_keyword"
        android:layout_alignBottom="@id/search_recent_keyword"

        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/search_recent_keyword"
        android:background="@drawable/tour_searchbar_remove" />
</RelativeLayout>