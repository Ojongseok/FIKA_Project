<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:id="@+id/placeinfo_sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:id="@+id/placeinfo_top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/placeinfo_back_iv"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/back" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />


                <TextView
                    android:id="@+id/placeinfo_top_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="장소 정보"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/placeinfo_more_iv"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/home" />
            </LinearLayout>

            <ImageView
                android:id="@+id/placeinfo_cover_iv"
                android:layout_width="323dp"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/sample_image"
                app:layout_constraintTop_toBottomOf="@id/placeinfo_top_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <LinearLayout
                android:id="@+id/placeinfo_cover_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/placeinfo_cover_iv">

                <TextView
                    android:id="@+id/placeinfo_cover_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:text="단밤"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/placeinfo_cover_address_iv"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="2dp"
                        android:background="@drawable/ic_location_off"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/placeinfo_cover_address_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="경기 고양시 일산동구 호수로 731"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/placeinfo_add_my_course_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/btn_add_my_course"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:id="@+id/placeinfo_cover_layout_underview"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="32dp"
                android:background="#D8D8D8"
                app:layout_constraintTop_toBottomOf="@id/placeinfo_cover_layout" />

            <LinearLayout
                android:id="@+id/placeinfo_basic_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/placeinfo_cover_layout_underview">


                <TextView
                    android:id="@+id/placeinfo_basic_info_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="기본 정보"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <ImageView
                        android:id="@+id/placeinfo_time_iv"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/time"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/placeinfo_time_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="26dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="@id/placeinfo_time_iv"
                        app:layout_constraintTop_toTopOf="@id/placeinfo_time_iv">

                        <TextView
                            android:id="@+id/placeinfo_time_tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="운영중"
                            android:textSize="16sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/placeinfo_time_tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="운영중"
                            android:textSize="16sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/placeinfo_time_tv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="운영중"
                            android:textSize="16sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/placeinfo_web_iv"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/website"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/placeinfo_time_layout" />

                    <LinearLayout
                        android:id="@+id/placeinfo_web_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="26dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="@id/placeinfo_web_iv"
                        app:layout_constraintTop_toTopOf="@id/placeinfo_web_iv">

                        <TextView
                            android:id="@+id/placeinfo_web_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="운영중"
                            android:textSize="16sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/placeinfo_call_iv"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/call"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/placeinfo_web_layout" />

                    <LinearLayout
                        android:id="@+id/placeinfo_call_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="26dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="@id/placeinfo_call_iv"
                        app:layout_constraintTop_toTopOf="@id/placeinfo_call_iv">

                        <TextView
                            android:id="@+id/placeinfo_call_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="운영중"
                            android:textSize="16sp"
                            android:textStyle="normal" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <View
                android:id="@+id/placeinfo_basic_info_layout_underview"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="40dp"
                android:background="#D8D8D8"
                app:layout_constraintTop_toBottomOf="@id/placeinfo_basic_info_layout" />

            <LinearLayout
                android:id="@+id/placeinfo_locate_where_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/placeinfo_basic_info_layout_underview">


                <TextView
                    android:id="@+id/placeinfo_locate_where_info_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="위치 정보"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <FrameLayout
                        android:id="@+id/placeinfo_locate_where_info_map"
                        android:layout_width="match_parent"
                        android:layout_height="262dp"
                        android:background="@color/grey"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <ImageView
                        android:id="@+id/placeinfo_locate_where_info_iv"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="118.5dp"
                        android:background="@drawable/ic_location_off"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/placeinfo_locate_where_info_map" />


                    <TextView
                        android:id="@+id/placeinfo_locate_where_info_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="서울특별시 이태원~"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        app:layout_constraintStart_toEndOf="@id/placeinfo_locate_where_info_iv"
                        app:layout_constraintTop_toTopOf="@id/placeinfo_locate_where_info_iv"
                        app:layout_constraintBottom_toBottomOf="@id/placeinfo_locate_where_info_iv"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <View
                android:id="@+id/placeinfo_locate_where_info_layout_underview"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="40dp"
                android:background="#D8D8D8"
                app:layout_constraintTop_toBottomOf="@id/placeinfo_locate_where_info_layout" />

            <LinearLayout
                android:id="@+id/placeinfo_locate_menu_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/placeinfo_locate_where_info_layout_underview">


                <TextView
                    android:id="@+id/placeinfo_locate_menu_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="대표 메뉴 및 가격"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:id="@+id/placeinfo_locate_menu_layout_detail1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/placeinfo_locate_menu_tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="수타짬뽕"
                            android:textSize="16sp"
                            android:textStyle="normal" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/placeinfo_locate_menu_price_tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10,000원"
                            android:textSize="16sp"
                            android:textStyle="normal" />

                        <ImageView
                            android:id="@+id/placeinfo_locate_menu_price_iv1"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/yen_currency"
                            android:layout_marginStart="8dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/placeinfo_locate_menu_layout_detail2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/placeinfo_locate_menu_layout_detail1">

                        <TextView
                            android:id="@+id/placeinfo_locate_menu_tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="수타짬뽕"
                            android:textSize="16sp"
                            android:textStyle="normal" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/placeinfo_locate_menu_price_tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10,000원"
                            android:textSize="16sp"
                            android:textStyle="normal" />

                        <ImageView
                            android:id="@+id/placeinfo_locate_menu_price_iv2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/yen_currency"
                            android:layout_marginStart="8dp"
                            />

                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <View
                android:id="@+id/placeinfo_locate_menu_layout_underview"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="40dp"
                android:background="#D8D8D8"
                app:layout_constraintTop_toBottomOf="@id/placeinfo_locate_menu_layout" />

            <LinearLayout
                android:id="@+id/placeinfo_locate_review_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/placeinfo_locate_menu_layout_underview">


                <TextView
                    android:id="@+id/placeinfo_locate_review_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="리뷰"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!--            <com.github.rubensousa.gravitysnaphelper.GravitySnapRecyclerView-->
                <!--                android:id="@+id/placeinfo_locate_review_rv"-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"-->
                <!--                android:layout_marginTop="8dp"-->
                <!--                android:orientation="vertical"-->
                <!--                tools:listitem="@layout/item_placeinfo_review"-->
                <!--                app:snapGravity="start"/>-->
            </LinearLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item_placeinfo_review_top_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/placeinfo_locate_review_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/item_placeinfo_review_profile_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/profile_sample_img"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/item_placeinfo_review_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="새로이짱"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="6dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/item_placeinfo_review_profile_iv"/>

                <ImageView
                    android:id="@+id/item_placeinfo_review_star_tv"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_star_on"
                    app:layout_constraintStart_toStartOf="@id/item_placeinfo_review_name_tv"
                    app:layout_constraintTop_toBottomOf="@id/item_placeinfo_review_name_tv"/>

                <TextView
                    android:id="@+id/item_placeinfo_review_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2022-07-27"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <ImageView
                    android:id="@+id/item_placeinfo_review_more_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/dot"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item_placeinfo_review_bottom_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/item_placeinfo_review_top_layout"
                app:layout_constraintStart_toStartOf="@id/item_placeinfo_review_top_layout"
                app:layout_constraintEnd_toEndOf="@id/item_placeinfo_review_top_layout">

                <LinearLayout
                    android:id="@+id/item_placeinfo_review_bottom_img_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9.5dp"
                    android:layout_marginEnd="9.5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:id="@+id/item_placeinfo_review_img_01"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/sample_image"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/item_placeinfo_review_img_02"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/sample_image"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/item_placeinfo_review_img_03"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/sample_image"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                </LinearLayout>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_review"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/item_placeinfo_review_bottom_img_layout"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_all_review"
                android:scaleType="fitCenter"
                android:padding="20dp"
                app:layout_constraintTop_toBottomOf="@id/item_placeinfo_review_bottom_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


    <ImageView
        android:id="@+id/placeinfo_up_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/up"
        android:scaleType="fitCenter"
        android:padding="22dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
