<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/camera_or_gallery_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC9D9D9D"
    tools:context=".ui.main.mycourse.ReviewCameraOrGallery">

    <FrameLayout
        android:id="@+id/review_camera_btn"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/explore_circle"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/start_gallery_btn"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageView27"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/camera" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/start_gallery_btn"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/explore_circle"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageView28"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/gallery" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="카메라 촬영"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/review_camera_btn"
        app:layout_constraintEnd_toStartOf="@+id/review_camera_btn"
        app:layout_constraintTop_toTopOf="@+id/review_camera_btn" />

    <TextView
        android:id="@+id/textView47"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="갤러리에서 첨부"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/start_gallery_btn"
        app:layout_constraintEnd_toStartOf="@+id/start_gallery_btn"
        app:layout_constraintTop_toTopOf="@+id/start_gallery_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>